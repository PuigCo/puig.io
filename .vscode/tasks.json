{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "hugo-build",
            "type": "shell",
            "command": "test -z '${env:REMOTE_CONTAINERS}' || make build domain=${input:domain} dest=dist/${input:domain} debug=1 warn=1",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "hugo-watch",
            "type": "shell",
            "command": "test -z '${env:REMOTE_CONTAINERS}' || make dev debug=1 strict=1",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "close": true
            },
            "group": "build",
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ],
    "inputs": [
      {
        "id": "domain",
        "description": "Which Hugo website to render?",
        "type": "pickString",
        "options": [
          "puig.io",
          "puigco.com"
        ]
      }
    ]
}